{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <h1 style='padding-top:0.2%;text-align:center;color:#43A3C8;font-weight:bold'>Centres</h1>
    <p style='text-align:center'>{{ app.user.nom }}</p>
    <hr style='background-color:black;border-none;height:0.5px;margin-right:-100%;margin-left:-100%'>
    
    <h1 style='text-align:center'>Modifier votre mot de passe</h1>
    <div style='margin-left:30%;margin-right:30%;margin-top:5%'>
        {{ form_start(resetForm) }}
            {{ form_row(resetForm.plainPassword) }}
            <div style="text-align:center;">
                <button class="btn btn-primary" style='margin-left:25%;margin-top:5%'>Modifier le mot de passe</button>
            </div>
        {{ form_end(resetForm) }}
    </div>
{% endblock %}
