{% extends 'base.html.twig' %}

{% block title %}Edit Dirigeants{% endblock %}

{% block body %}

    {# TOP #}
    <h1 style='padding-top:0.2%;text-align:center;color:#43A3C8;font-weight:bold'>Dirigeants</h1>
    <p style='text-align:center'>{{ app.user.nom }}</p>
    <hr style='background-color:black;border-none;height:0.5px;margin-right:-100%;margin-left:-100%'>
    <h2 style='text-align:center;margin-bottom:3%'>Modifier les dirigeants</h2>

    {{ form_start(form) }}
        <div>
            <p style='margin-bottom:0%;text-align:center'>Président(e) : </p>{{ form_widget(form.dirigeant_president,  { 'attr': {'style': "width:40%;height:2em;margin:auto;display:block;margin-bottom:1%"} }) }}
            {{ form_errors(form.dirigeant_president) }}
            <p style='margin-bottom:0%;text-align:center'>Vice Président(e) : </p>{{ form_widget(form.dirigeant_vice_president,  { 'attr': {'style': "width:40%;height:2em;margin:auto;display:block;margin-bottom:1%"} }) }}
            {{ form_errors(form.dirigeant_vice_president) }}
            <p style='margin-bottom:0%;text-align:center'>Trésorier(e) : </p>{{ form_widget(form.dirigeant_tresorier, { 'attr':  {'style': "width:40%;height:2em;margin:auto;display:block;margin-bottom:1%"} }) }}
            {{ form_errors(form.dirigeant_tresorier) }}
            <p style='margin-bottom:0%;text-align:center'>Secrétaire Général : </p>{{ form_widget(form.dirigeant_secretaire, { 'attr': {'style': "width:40%;height:2em;margin:auto;display:block;margin-bottom:1%"} }) }}
            {{ form_errors(form.dirigeant_secretaire) }}
            <button class="btn btn-success" style='margin-top:3%;width:15%;display:block;margin:1% auto !important;margin-top:5%'>{{ button_label|default('Valider les modifications') }}</button>
        </div>
    {{ form_end(form) }}
    <a href="{{ path('accueil') }}" class='btn btn-danger' style='margin-top:3%;width:15%;display:block;margin: 1% auto !important;'>Annuler les modifications</a>

    

 
{% endblock %}
