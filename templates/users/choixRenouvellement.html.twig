{% extends 'base.html.twig' %}

{% block title %}FFNPRO{% endblock %}

{% block body %} 
    <h1 style='padding-top:0.2%;text-align:center;color:#43A3C8;font-weight:bold'>Licencié(e)s</h1>
    <p style='text-align:center'>{{ app.user.nom }}</p>
    <hr style='background-color:black;border-none;height:0.5px;margin-right:-100%;margin-left:-100%'>
    {% if app.request.get('_route') == 'choice_renouvellement' %}
        <p style='text-align:center'>Le licencié <b>{{user.nom}} {{user.prenom}}</b> souhaite renouveler sa licence.</b></p><br>
        <a href="{{ path('users_renouvellement', {'id': user.id}) }}" class='btn btn-success' style='position: absolute;top: 35%;left: 50%;transform: translate(-50%, -50%);'> > Envoi licence physique <  </a><br><br><br>
        <p style='text-align:center;margin-top:0.25%'><b> OU </b></p>
        <a href="{{ path('qrcode_only', {'id': user.id}) }}" class='btn btn-success' style='position: absolute;top: 45%;left: 50%;transform: translate(-50%, -50%);margin-top:1%'> > Je souhaite recevoir seulement le QRCode par mail à <b>{{user.email}} < </b></a><br><br> 
        <a href="{{ path('accueil') }}" class="btn btn-primary" style='position: absolute;top: 55%;left: 50%;transform: translate(-50%, -50%);'>Retour au menu principal</a>
    {% else %}
        <p style='text-align:center'>Le licencié <b>{{user.nom}} {{user.prenom}}</b> souhaite renouveler sa licence.</b></p><br>
        <a href="{{ path('choice_edit_physique', {'id': user.id}) }}" class='btn btn-success' style='position: absolute;top: 35%;left: 50%;transform: translate(-50%, -50%);'> > Envoi licence physique <  </a><br><br><b>
        <p style='text-align:center;margin-top:0.25%'><b> OU </b></p>
        <a href="{{ path('choice_edit_qrcode', {'id': user.id}) }}" class='btn btn-success' style='position: absolute;top: 45%;left: 50%;transform: translate(-50%, -50%);margin-top:1%'> > Je souhaite recevoir seulement le QRCode par mail à <b>{{user.email}} < </b></a><br><br> 
        <a href="{{ path('accueil') }}" class="btn btn-primary" style='position: absolute;top: 55%;left: 50%;transform: translate(-50%, -50%);'>Retour au menu principal</a>
    {% endif %}
{% endblock %}
