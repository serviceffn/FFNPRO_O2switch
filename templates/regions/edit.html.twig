{% extends 'base.html.twig' %}

{% block title %}Edit Regions{% endblock %}

{% block body %}


    <h1 style='padding-top:0.2%;text-align:center;color:#43A3C8;font-weight:bold'>Centres</h1>
    <p style='text-align:center'>{{ app.user.nom }}</p>
    <hr style='background-color:black;border-none;height:0.5px;margin-right:-100%;margin-left:-100%'>


    {{ form_start(form) }}

            <h2 style='color:#43A3C8;text-align:center;font-size:1.5em'>Président(e)</h2><hr style='border: 1px solid grey;width:20%;margin-left:40%'>
        <div style='margin-left:35%'>
            {# <p style='position:absolute;'>Région : </p>{{ form_widget(form.nom, { 'attr': {'style': "margin-left:2%" } }) }} #}
            <p style='float:left;'>Prénom : </p>{{ form_widget(form.prenom_president, { 'attr': {'style': "width:20%;height:1.7em;margin-left:25%"} }) }}
            <p style='position:absolute;'>Nom : </p>{{ form_widget(form.nom_president, { 'attr': {'style': "width:20%;height:1.7em;margin-left:25%"} }) }}
            <p style='position:absolute;'>Téléphone : </p>{{ form_widget(form.telephone_president, { 'attr': {'style': "width:20%;height:1.7em;margin-left:25%"} }) }}
            <p style='position:absolute;'>Email : </p>{{ form_widget(form.email_president, { 'attr': {'style': "width:20%;height:1.7em;margin-left:25%"} }) }}
        </div>
        <button class="btn btn-success" style='float:left;margin-left:30%;margin-top:5%'>{{ button_label|default('Valider les modifications') }}</button>
{{ form_end(form) }}
    <a href="{{ path('regions_index') }}" class='btn btn-danger' style='margin-left:3%;margin-top:5%;'>Annuler les modifications</a>

{% endblock %}
 