{% extends 'base.html.twig' %}

{% block title %}Liste des Factures{% endblock %}

{% block body %}
    <h1>Liste des Factures</h1>
    
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Association ID</th>
                <th>Créé le</th>
                <th>Mis à jour le</th>
                <th>PDF</th>
            </tr>
        </thead>
        <tbody>
            {% for facture in factures %}
                <tr>
                    <td>{{ facture.id }}</td>
                    <td>{{ facture.associationId }}</td>
                    <td>{{ facture.createdAt|date('Y-m-d H:i:s') }}</td>
                    <td>{{ facture.updatedAt ? facture.updatedAt|date('Y-m-d H:i:s') : 'N/A' }}</td>
                    <td>
                        {% if facture.pdfContent %}
                            <a href="{{ path('download_pdf', { 'id': facture.id }) }}" target="_blank">Voir PDF</a>
                        {% else %}
                            Pas de facture disponible
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
